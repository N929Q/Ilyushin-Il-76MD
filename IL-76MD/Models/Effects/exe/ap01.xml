<PropertyList>
  
  <path>ap01.ac</path>
  
  <animation>
    <type>select</type>	  
    <condition>
      <property>sim/multiplay/generic/int[3]</property>		  
    </condition>
  </animation>
  
  
  <animation>
    <type>billboard</type>    
    <spherical type="bool">true</spherical>
  </animation>
  
  
  <animation>
    <type>material</type>
    <condition>		
      <greater-than>		
	<property>/sim/time/sun-angle-rad</property>
	<value>1.57</value>
      </greater-than>
    </condition>
    <emission>	
      <red>0.4</red>	
      <green>0.4</green>	
      <blue>0.4</blue>
    </emission>
  </animation>
  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>700</max-m>
  </animation>
</PropertyList>